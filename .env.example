# Debug Configuration
DEBUG=false                    # Enable debug UI elements and extra logging
DEBUGLOAD=false               # Keep loading state active (requires DEBUG=true)

# Network Configuration
NETWORK=mainnet               # Network to use: 'mainnet' or 'devnet'

# RPC Endpoints
SOLANA_RPC=                   # Custom Solana RPC endpoint (optional, defaults to public RPC)
DEVNET_RPC=                   # Custom Devnet RPC endpoint (optional, defaults to public RPC)
MAINNET_TX_RPC=               # Dedicated RPC for transaction submission (optional)

# GLAM Protocol Configuration
GLAM_PROGRAM_MAINNET=Gco1pcjxCMYjKJjSNJ7mKV7qezeUTE7arXJgy7PAPNRc
GLAM_PROGRAM_DEVNET=         # GLAM program ID for devnet (required if NETWORK=devnet)

# Example Production Configuration:
# NETWORK=mainnet
# SOLANA_RPC=https://your-rpc-provider.com/mainnet
# MAINNET_TX_RPC=https://your-tx-optimized-rpc.com

# Example Devnet Configuration:
# NETWORK=devnet
# DEVNET_RPC=https://your-rpc-provider.com/devnet
# GLAM_PROGRAM_DEVNET=YourDevnetProgramId